{% form_theme form with ['bootstrap_4_layout.html.twig'] %} 
 {# d√©ja mis dans le fichier config/packages/twig.yaml ajouter form_themes: ['bootstrap_4_horizontal_layout.html.twig']#}
{% block title %}Modification du mot de passe{% endblock %}

	{% block body %}
		<div class="container mt-3">
			

			<h1 class="text-center">Modification du mot de passe de {{user.firstName}} {{user.lastName}}</h1>
			{{form_start(form)}}
			{{ form_row(form.oldPassword, {'label':false,'attr':{'placeholder':"Entrer l'ancien mot de passe"}}) }} 
			{{ form_row(form.newPassword, {'label':false,'attr':{'placeholder':"Entrez le nouveau mot de passe"}}) }}
			{{ form_row(form.confirmNewPassword, {'label':false,'attr':{'placeholder':"Entrer la confirmation du nouveau mot de passe"}}) }} 
						 
			<button type="submit" class="btn btn-success">Modifier mon mot de passe</button>
			{{ form_end(form) }}

		</div>
		
	{% endblock %}